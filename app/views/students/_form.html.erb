<%= simple_form_for(@student, html: { class: 'form-horizontal' }) do |f| %>
  <div class="row">
    <div class="small-6 columns">
      <h3><%= controller.action_name.capitalize %> Student</h3>
    
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :date_of_birth, label: "Date of Birth:", as: :string, :input_html => {:class => "avg datepicker"} %>
      <%= f.input :rating %>
      <%= f.input :family_id, collection: @families.map{|f| f.family_name}, prompt: "Select family..." %>
      <%= f.input :active %>
      <div class="form-actions">
      <%= f.submit nil, class: 'button radius' %>
      <%= link_to 'Back to list of students', students_path, :class => 'button secondary radius' %>
      </div>
    </div>
  </div>

<% end %>